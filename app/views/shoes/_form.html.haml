= form_for @shoe do |f|
  -if @shoe.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shoe.errors.count, "error")} prohibited this shoe from being saved:"
      %ul
        - @shoe.errors.full_messages.each do |msg|
          %li= msg
          
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :brand
    = f.text_field :brand
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :condition
    = f.text_field :condition
  .field
    = f.label :description
    = f.text_field :description
    
= form_for(@shoe,:html => {:multipart => true}) do |f|
  %div{:class => "field"}
    = f.file_field :shoe, images
    

  .actions
  
    %div
    = f.submit 'submit'

