= form_for @countdown do |f|
  -if @countdown.errors.any?
    #error_explanation
      %h2= "#{pluralize(@countdown.errors.count, "error")} prohibited this countdown from being saved:"
      %ul
        - @countdown.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
